# to get inputs use: swaymsg -t get_inputs

exec {
    # gammastep -l $(cat ~/.config/latlong)
    mako
    # xrdb -load ~/.Xresources
    /usr/libexec/xdg-desktop-portal -r
    /usr/libexec/xdg-desktop-portal-wlr -r
    echo -e $(swaymsg -p -t get_outputs) > .sway_outputs
    /usr/libexec/polkit-gnome-authentication-agent-1
    gio mount -d /dev/sdb1; gio mount -d /dev/nvme1n1p1
    /usr/libexec/sway-systemd/session.sh --with-cleanup
    /usr/libexec/sway-systemd/assign-cgroups.py
}

exec_always {
    systemctl --user import-environment; systemctl --user start sway-session
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme 'WhiteSur-cursors'
    gsettings set $gnome-schema font-name 'Noto Sans'
}
# exec inactive-windows-transparency

default_border pixel
default_floating_border pixel
workspace_auto_back_and_forth yes
focus_follows_mouse no
gaps inner 15px
smart_gaps on
hide_edge_borders smart
seat seat0 hide_cursor 1000
default_orientation horizontal

# load the configured cursor theme, change with lxappearance
seat seat0 xcursor_theme default

# floating terminal
# for_window [app_id="floating"] floating enable

for_window {
    # prevent chrome in wayland from capturing keyboard
    [app_id="^chrome-.*-.*$"] shortcuts_inhibitor disable

    # show firefox file upload as floating window
    [app_id="firefox" title="File Upload"] floating enable
}

bindsym --whole-window {
    $mod+Shift+button4 exec "light -A 1"
    $mod+Shift+button5 exec "light -U 1"
    # mouse wheel changes brightness

    $mod+button4 exec "amixer set Master 1%+ unmute"
    $mod+button5 exec "amixer set Master 1%- unmute"
    # mouse wheel changes audio volume
}

bindsym {
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    $mod+b splith
    $mod+v splitv

    # Switch the current container between different layout styles
    $mod+s layout stacking
    $mod+w layout tabbed
    $mod+e layout toggle split

    # Make the current focus fullscreen
    $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle
    # disabled because I want this for dismissing notifications

    # move focus to the parent container
    $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    $mod+minus scratchpad show
    # switch to workspace
    $mod+1 workspace $ws1
    $mod+2 workspace $ws2
    $mod+3 workspace $ws3
    $mod+4 workspace $ws4
    $mod+5 workspace $ws5
    $mod+6 workspace $ws6
    $mod+7 workspace $ws7
    $mod+8 workspace $ws8
    $mod+9 workspace $ws9
    $mod+0 workspace $ws10
    # move focused container to workspace
    $mod+Shift+1 move container to workspace $ws1
    $mod+Shift+2 move container to workspace $ws2
    $mod+Shift+3 move container to workspace $ws3
    $mod+Shift+4 move container to workspace $ws4
    $mod+Shift+5 move container to workspace $ws5
    $mod+Shift+6 move container to workspace $ws6
    $mod+Shift+7 move container to workspace $ws7
    $mod+Shift+8 move container to workspace $ws8
    $mod+Shift+9 move container to workspace $ws9
    $mod+Shift+0 move container to workspace $ws10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    # $mod+i exec 'swaymsg "for_window [pid=${$}] floating enable" & exec $term'
    XF86AudioRaiseVolume exec "amixer set Master 5%+ unmute"
    XF86AudioLowerVolume exec "amixer set Master 5%- unmute"
    XF86AudioMute exec "amixer set Master toggle"
    XF86AudioMicMute exec "amixer set Capture toggle"
    $mod+shift+u exec "playerctl play-pause"
    XF86MonBrightnessUp exec "light -A 1"
    XF86MonBrightnessDown exec "light -U 1"
    $mod+n exec 'swaymsg "bar mode toggle"'
    # $mod+p exec "sleep 0.2 & killall -SIGUSR1 swayidle"
    $mod+p exec "swaylock"
    $mod+shift+p exec "swaylock & systemctl suspend"
    $mod+x exec "~/.local/bin/screenshot-select"
    $mod+shift+x exec "~/.local/bin/screenshot"
    Control+space exec "makoctl dismiss"
    $mod+Control+space exec "makoctl invoke"
    $mod+o exec "~/.local/bin/pass-rofi"
    $mod+y exec "~/.local/bin/mpvyt-rofi"
    $mod+Ctrl+Print exec wf-recorder -a -f rtmp://live-yto.twitch.tv/app/live_100607192_Y8CdRUQxGbTLCi6j6Uja4c8nowC8Cb -c h264_vaapi -d /dev/dri/renderD128 -t
    Ctrl+Print exec wf-recorder -f ~/recording_$(date +"%Y-%m-%d_%H:%M:%S.mkv") -c h264_vaapi -d /dev/dri/renderD128 -t
    Ctrl+Shift+Print exec wf-recorder -g "$$(slurp)" -f ~/recording_$(date +"%Y-%m-%d_%H:%M:%S.mkv") -c h264_vaapi -d /dev/dri/renderD128 -t
    Ctrl+Shift+BackSpace exec killall -s SIGINT wf-recorder
    # $mod+c exec killall -SIGUSR1 waybar
    $mod+c exec swaymsg bar hidden_state toggle
}

# xwayland disable
